<?xml version="1.0" encoding="UTF-8"?>
<plugin>

   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="rental.ui.cmd.oneCustomerSelected">
         <and>
            <count
                  value="1">
            </count>
            <iterate>
               <instanceof
                     value="com.opcoach.training.rental.Customer">
               </instanceof>
            </iterate>
         </and>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.eclipse.ui.edit.copy"
            class="rental.ui.cmd.CustomerCopyHandler">
         <activeWhen>
            <reference
                  definitionId="rental.ui.cmd.oneCustomerSelected">
            </reference>
         </activeWhen>
         <enabledWhen>
            <reference
                  definitionId="rental.ui.cmd.oneCustomerSelected">
            </reference>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:com.magellium.rental.ui.rentalAgencyView?after=additions">
         <command
               commandId="org.eclipse.ui.edit.copy"
               label="Customer Copy"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="rental.ui.cmd.oneCustomerSelected">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         id="com.magellium.rental.ui.cmd.fragment"
         point="org.eclipse.e4.workbench.model">
      <fragment
            uri="fragment.e4xmi">
      </fragment>
   </extension>

</plugin>
